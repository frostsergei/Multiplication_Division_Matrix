<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlWork1.MatrixPage"
             Title="Штрассен">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="0" x:Name="NumberLabel"/>
                <Stepper Minimum="0" Maximum="6" Increment="1" Value="0" x:Name="NumberStepper" ValueChanged="StepperValChanged"/>
                <Label Text="Первая матрица:"/>
                <Grid x:Name="MatrixField1">

                </Grid>
                <Label Text="Вторая матрица:"/>
                <Grid x:Name="MatrixField2">

                </Grid>
                
                <Button Text="Перемножить матрицы" Clicked="StrassenClicked"/>
                <Label Text="Ответ" x:Name="Result"/>
                <Label Text="Решение" x:Name="Solution"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>